{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@kaabil/shared": ["../../packages/shared/src"],
      "@kaabil/shared/*": ["../../packages/shared/src/*"],
      "@kaabil/ui": ["../../packages/ui"],
      "@kaabil/ui/*": ["../../packages/ui/*"]
    }
  }
} 